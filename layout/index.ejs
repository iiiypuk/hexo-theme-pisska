<div class="archives">
  <% let last; %>
  <% page.posts.each(function (post) { %>
    <% let year = post.date.year(); %>
    <% if (last != year) { %>
      <p class="year"><%= year %></p>
      <% last = year; %>
    <% } %>

    <div class="post-link">
    <a class="post-link" href="<%- url_for(post.path) %>" title="<%= post.title %>">
      <%- full_date(post.date, 'Do MMMM') %> &mdash;
      <%= post.title %>
    </a>
    </div>
  <% }) %>
</div>
